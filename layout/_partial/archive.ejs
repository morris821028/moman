<%
var title = '';
var icon = '';
if (page.category){
  title = page.category;
  icon = 'category';
};
if (page.tag){
  title = page.tag;
  icon = 'tag';
};
if (page.archive){
  icon = 'archive';
  if (page.year) title = page.year+  (page.month ? '/' + page.month : '');
  else title = __('archive_a');
};
%>

<div class="post">
  <h1 class="<%= icon %>-icon"><%= title %></h1>
  <% if(page.archive){ %>
  <div class="archiveslist archive-float clearfix">
   <%- list_archives() %>
 </div>
  <% } %>
</div>

<div id="main">
<% page.posts.each(function(item){ %>
  <%- partial('_partial/article_row', {item: item, index: true,desc: false}) %>
<% }); %>
<% if (page.total > 1){ %>
  <nav id="page-nav" class="clearfix">
    <%- paginator({
      prev_text: '&laquo; Prev',
      next_text: 'Next &raquo;'
    }) %>
  </nav>
<% } %>
</div>
