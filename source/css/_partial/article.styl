.post,.page
  background color-section
  a
    color color-blue 
    &:hover
      color color-theme2
  hr 
    border 1px solid lighten(color-gray,30%)
  .photos
    max-width 90%
    display block
    margin 0.2em
    height auto
    vertical-align middle
    max-width 90%
    color #000000
    border 1px solid #CCCCCC
    padding 0.2em
    box-shadow 1px 2px 2px rgba(20%,20%,20%,0.6)
    height 100px
    float left

article
  header.article-info
    @media mini
      border-bottom 1px solid lighten(color-gray,30%)
    >h1
      padding 0.2em 3%
      font-size font-size+70
      line-height line-height
      @media tablet
        font-size font-size+100
        padding-top 0.3em
      word-wrap break-word 
      word-break normal
      font-smoothing antialiased
      border-left 5px solid color-theme
    >p.article-author
      padding 0.3em 4% 0.3em 0
      text-align right
      border-bottom 1px solid lighten(color-gray,30%)
      @media mini
        float right
        border-bottom none
    >p.article-time
      padding-top 0.5em
      font-size 0.8em
      text-align center
      @media mini
        float right
        margin-right 1em
        padding-top 0.1em
        font-size 0.9em
      &:before
        font-family font-icon-family
        font-size font-size+30
        content "\f017"
        font-smoothing()      
  .article-content
    padding 1.5em 4%
    .kb      
      padding .1em .6em
      border 1px solid color-gray
      background-color code-color
      color darken(color-gray,30%)
      box-shadow 0 1px 0 rgba(0,0,0,0.2),0 0 0 2px color-white inset
      border-radius 3px
      display inline-block
      margin 0 .1em;
      text-shadow 0 1px 0 color-white
      line-height line-height
      white-space nowrap
    h1
      color darken(color-content-level-1,30%)
      font-size font-size+80
      line-height 1.2em
    h2
      color darken(color-content-level-1,30%)
      font-size font-size+60
      line-height 1.2em
    h3,h4,h5,h6
      color darken(color-content-level-2,30%)
      font-size font-size+40
    h1,h2,h3,h3,h4,h5,h6
      font-smoothing antialiased
      padding 0.3em 0
      margin 0.5em 0
      >code
        padding 2px 4px
        font-size 90%
        color #c7254e
        background-color rgba(249, 249, 249, 0.1)
        white-space nowrap
        border-radius 4px
        font-family font-mono
        margin 0 2px
    hr 
      border 1px solid lighten(color-gray,30%)
    strong,em
      font-weight bold
    acronym,abbr
      border-bottom 1px dotted
    blockquote
      margin 0.65em 0 0.65em 4%
      padding-left 1%
      padding-right 1%
      line-height line-height
      font-size font-size+10
      border-left 5px solid rgba(152, 232, 99, 0.8)
      font-family Georgia, font-default
      footer
        background color-section
        padding 0
        margin 0
        font-size 80%
        line-height 1em
      cite
        font-style italic
        padding-left 0.5em
    ul,ol
      padding-left 2em
      font-size font-size+5
      @media mini
        padding-left 3em
    ul li
      list-style disc
      text-align match-parent
      margin 0.5em 0
    ol li
      list-style-type decimal
      margin 0.5em 0
    dl dt
      font-weight blod
    ul li>code,ol li>code,p code,strong code,em code
      padding 2px 4px
      font-size 90%
      color #c7254e
      background-color rgba(249, 249, 249, 0.1)
      white-space nowrap
      border-radius 4px
      font-family font-mono
      margin 0 2px
    p
      font-size font-size+5
      line-height line-height+0.2
      margin 0.7em 0
      @media tablet
        margin 1.2em 0
    img,video,figure img
      max-width 90%
      display block
      margin auto
      height auto
      vertical-align middle
      color #000000
      border 1px solid #CCCCCC
      padding 0.5em
      box-shadow 1px 2px 2px rgba(20%,20%,20%,0.6)
    figcaption,.caption
      text-align center
      display block
      font-size 0.9em
      font-weight blod
    .video-container
      position relative;
      padding-top 56%
      height 0
      overflow hidden
      iframe,object,embed
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        margin-top 0
    table
      width 100%
      border-collapse collapse
      border-spacing 0
      th
        font-weight bold
        border-bottom 3px solid lighten(color-gray,30%)
        padding-bottom 0.5em
      td 
        border-bottom 1px solid lighten(color-gray,30%)
        padding 10px 0
    .pullquote
      text-align left
      width 45%
      margin 0
      border none
    .left
      margin-left 0.5em
      margin-right 1em
      float left
    .right
      margin-right 0.5em
      margin-left 1em
      float right
